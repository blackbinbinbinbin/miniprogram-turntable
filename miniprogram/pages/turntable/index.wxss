.turntable-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 80rpx;
  color: #333;
}

.edit-btn {
  margin-top: 60rpx;
  padding: 20rpx 60rpx;
  background: #fff;
  border: 3rpx solid #ff4757;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.2);
  transition: all 0.3s ease;
}

.edit-btn:active {
  transform: scale(0.95);
  background: #ff4757;
}

.edit-btn:active .edit-text {
  color: #fff;
}

.edit-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
  transition: color 0.3s ease;
}

.turntable-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 350px;
  height: 350px;
}

.turntable-canvas {
  display: block;
  border-radius: 50%;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  background: #ffffff;
  width: 350px;
  height: 350px;
  position: relative;
}

.go-btn {
  position: absolute;
  transform: translate(-50%, -50%);
  z-index: 100;
  transition: all 0.3s ease;
  display: block;
  top: 100%;
  left: 50%;
}

.go-btn:active {
  transform: translate(-50%, -50%) scale(0.95);
}

/* 重新开始提示 */
.restart-hint {
  position: absolute;
  bottom: -80rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

 