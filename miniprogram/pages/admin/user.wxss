.container {
  min-height: 100vh;
  background: #fff;
  padding: 0;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 80rpx;
}

.search-box input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

/* 用户列表 */
.user-list {
  padding: 0 30rpx;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.user-info {
  flex: 1;
  margin-right: 30rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.edit-btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 6rpx;
}

/* 分页器 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  border-top: 1px solid #eee;
}

.page-btn {
  min-width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0 20rpx;
}

.page-btn.active {
  background: #07c160;
  color: #fff;
  border-color: #07c160;
  pointer-events: none;
}

.page-btn.disabled {
  background: #f5f5f5;
  color: #999;
  border-color: #eee;
  cursor: not-allowed;
  pointer-events: none;
}

.page-btn.prev.disabled {
  display: none;
}

.ellipsis {
  margin: 0 10rpx;
  color: #999;
}

/* 空状态 */
.empty-tip {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 编辑弹窗 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  border-top: 1px solid #eee;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.modal-btn.cancel {
  color: #666;
  background: #f5f5f5;
}

.modal-btn.confirm {
  color: #fff;
  background: #07c160;
} 