.container {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}

/* 搜索区域样式 */
.search-section {
  margin-top: 88rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #F5F5F5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 120rpx;
  height: 72rpx;
  background: #07C160;
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 列表样式 */
.turntable-list {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.list-header {
  display: flex;
  padding: 30rpx;
  background: #fafafa;
  border-bottom: 1px solid #eee;
}

.header-item {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.header-item:last-child {
  flex: 0.5;
  text-align: center;
}

.list-content {
  padding: 0 30rpx;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

.item-name {
  flex: 2;
  font-size: 28rpx;
  color: #333;
  text-align: left;
}

.creator-info {
  flex: 2;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  text-align: left;
}

.item-creator {
  font-size: 28rpx;
  color: #333;
  text-align: left;
}

.item-openid {
  font-size: 20rpx;
  color: #07C160;
  text-align: left;
  word-break: break-all;
}

.item-actions {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.action-btn.edit {
  min-width: 100rpx;
  max-width: 160rpx;
  padding: 12rpx 0;
  background: #1989FA;
  color: #fff;
  border-radius: 8rpx;
  font-size: 22rpx;
  line-height: 1.5;
  text-align: center;
  white-space: nowrap;
}

.action-btn.delete {
  background: #ff4d4f;
}

/* 空状态提示 */
.empty-tip {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 分页器样式 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  gap: 20rpx;
}

.page-btn {
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  color: #333;
}

.page-btn.active {
  background: #07C160;
  color: #fff;
}

.page-btn.disabled {
  background: #f5f5f5;
  color: #999;
  pointer-events: none;
}

.page-btn.prev,
.page-btn.next {
  background: #fff;
  border: 1px solid #ddd;
}

.page-btn.prev:active,
.page-btn.next:active {
  background: #f5f5f5;
}

/* 页面头部 */
.page-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
  z-index: 100;
}

.back-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 36rpx;
  height: 36rpx;
  transform: rotate(180deg);
}

.page-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
}

.header-right {
  width: 48rpx;
  height: 48rpx;
} 