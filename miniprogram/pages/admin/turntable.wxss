.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
  width: 100%;
}

/* 搜索区域样式 */
.search-section {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #F5F5F5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 120rpx;
  height: 72rpx;
  background: #07C160;
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 列表样式 */
.turntable-list {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.list-header {
  display: flex;
  padding: 30rpx;
  background: #fafafa;
  border-bottom: 1px solid #eee;
}

.header-item {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.header-item:last-child {
  flex: 0.5;
  text-align: center;
}

.list-content {
  padding: 0 30rpx;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

.item-name,
.item-creator,
.item-time {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-actions {
  flex: 0.5;
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.action-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
  color: #fff;
}

.action-btn.edit {
  background: #1890ff;
}

.action-btn.delete {
  background: #ff4d4f;
}

/* 空状态提示 */
.empty-tip {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
} 