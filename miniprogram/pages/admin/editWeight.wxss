.edit-page {
  height: calc(100vh - 120rpx);
  background: #fff;
  padding-bottom: 120rpx;
}

.section {
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.options-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.header-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.sector-list {
  padding: 20rpx 0;
}

.sector-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.sector-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 0 20rpx;
}

.weight-input {
  flex: 1;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 0 20rpx;
}

.tips {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

/* 保存按钮区域 */
.save-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  border-top: 1px solid #eee;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn.disabled {
  background: #9be6b4;
}

/* loading遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  animation: rotate 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
} 