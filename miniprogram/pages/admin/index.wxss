/* miniprogram/pages/admin/index.wxss */

/* 页面重置 */
page {
  margin: 0;
  padding: 0;
  background-color: #f5f7fa;
}

.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 0;
  width: 100%;
}

/* 头部标题 */
.header {
  background: white;
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  width: 100%;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

/* 统计区域 */
.stats-section {
  background: white;
  padding: 40rpx 0;
  width: 100%;
  border-bottom: 1rpx solid #e0e0e0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-number {
  font-size: 64rpx;
  font-weight: 600;
  color: #07c160;
  line-height: 1.2;
  margin-bottom: 20rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

/* 功能菜单 */
.menu-section {
  background: white;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  font-weight: 600;
}

.menu-list {
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.menu-item:last-child {
  margin-bottom: 0;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
} 